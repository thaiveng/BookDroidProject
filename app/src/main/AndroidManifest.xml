<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookdroidproject">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_png"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Activity_books"></activity>
        <activity android:name=".Activity_Notifications" />
        <activity
            android:name=".Activity_Posts"
            android:label="@string/title_activity__posts"
            android:theme="@style/NoActionBar" />
        <activity android:name=".Activity_Feeds" />
        <activity android:name=".Activity_Stores" />
        <activity android:name=".Activity_sign_up" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>