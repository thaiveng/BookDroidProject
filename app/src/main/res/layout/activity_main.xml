<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/logo_png"
        android:layout_marginTop="47dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="49.2dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/ic_person_black_24dp"
            android:id="@+id/img_user"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:layout_width="30dp" />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edit_text_email_login"
            android:singleLine="true"
            android:hint="Username"
            android:background="@null"
            android:layout_toRightOf="@id/img_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="49.2dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:src="@drawable/ic_lock"
            android:id="@+id/img_pwd"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:layout_width="30dp" />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/edit_text_pwd"
            android:singleLine="true"
            android:hint="Password"
            android:background="@null"
            android:layout_toRightOf="@id/img_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/radius_shape"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_width="76dp"
        android:layout_height="28dp" />
    <Button
        android:background="@drawable/radius_shape"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Login with facebook"
        android:layout_width="233dp"
        android:layout_height="28dp" />
    <Button

        android:background="@drawable/radius_shape"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Login with gmail"
        android:layout_width="233dp"
        android:layout_height="28dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="Do not have an account? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/txt_register"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>