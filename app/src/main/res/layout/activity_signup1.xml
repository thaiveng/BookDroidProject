<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#565E7C"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginBottom="20dp"
        android:text="Sign Up"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorLogo"
        android:layout_width="350dp"
        android:layout_height="70dp" />


    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/edtUsername_signup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_bg"
        android:drawableLeft="@drawable/ic_username"
        android:hint="Username"
        android:textSize="20sp" />


    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/edtEmail_signup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_bg"
        android:drawableLeft="@drawable/ic_email"
        android:hint="Email"
        android:textSize="20sp" />


    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/edtPassword_signup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_bg"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Email"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edtConfirmPassword_signup"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edt_bg"
        android:drawableLeft="@drawable/ic_password"
        android:hint="Email"
        android:textSize="20sp" />


    <Button
        android:background="@drawable/radius_shape"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorLogo"
        android:textSize="25sp"
        android:text="Submit"
        android:layout_width="150dp"
        android:layout_height="70dp" />




</LinearLayout>