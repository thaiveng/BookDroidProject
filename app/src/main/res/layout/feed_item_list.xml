<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/linearlayout_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/image_feed"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_gravity=""
                android:layout_marginLeft="5dp"
                android:id="@+id/title_feed"
                android:text="title of the posts"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/description_feed"
                android:text="kdfkdjfkjdfkjfkldjfkjfkjfkjdffjdkfjkdfkfjfkkdfjdkfjdkfjdkfjkdfjkdfkjfkdjkfhfjkhfj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
       android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/linearlayout_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rel_like_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/img_like_feed"
                android:src="@drawable/like_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="52 Like"
                android:layout_toRightOf="@id/img_like_feed"
                android:id="@+id/tv_like_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/rel_comment_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img_comment_feed"
                android:src="@drawable/comment_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="5 Comment"
                android:layout_toRightOf="@id/img_comment_feed"
                android:id="@+id/tv_commend_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/rel_share_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_share_feed"
                android:src="@drawable/share_fb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="7 Share"
                android:layout_toRightOf="@id/img_share_feed"
                android:id="@+id/tv_share_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>