<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Activity_books">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/tool_bar"
            android:id="@+id/toolBar">

        </include>

        <LinearLayout
            android:layout_below="@id/toolBar"
            android:layout_above="@id/bottom_navigationView"
            android:orientation="vertical"
            android:id="@+id/main_linear_ScreenEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:padding="10dp"
                android:background="@color/colorBackground"
                android:orientation="horizontal"
                android:id="@+id/sub_linear1_in_ScreenEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_cancel_ScreenEditProfile"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:text="Cancel"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_edit_profile_ScreenEditProfile"
                    android:textSize="15dp"
                    android:textColor="#0F0E0E"
                    android:text="Edit profile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_done_ScreenEditProfile"
                    android:textSize="15dp"
                    android:textColor="#071A88"
                    android:text="Done"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/sub_linear2_ScreenEditProfile"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#D5D7F3"
                    android:src="@drawable/user_profile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <TextView
                    android:id="@+id/tv_below_imgUser_ScreenEditProfile"
                    android:textColor="#071A88"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:text="Change Profile Photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:id="@+id/sub_linear3_ScreenEditProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                
                <TextView
                    android:id="@+id/tv_name_ScreenEditProfile"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edt_name_ScreenEditProfile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:id="@+id/sub_linear4_ScreenEditProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_bio_ScreenEditProfile"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:text="Bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edt_bio_ScreenEditProfile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:id="@+id/sub_linear5_ScreenEditProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_email_ScreenEditProfile"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edt_email_ScreenEditProfile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:id="@+id/sub_linear6_ScreenEditProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_phoneNumber_ScreenEditProfile"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:text="Phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edt_phoneNumber_ScreenEditProfile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:weightSum="4"
                android:id="@+id/sub_linear7_ScreenEditProfile"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_gender_ScreenEditProfile"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:text="Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/edt_gender_ScreenEditProfile"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/rel_searchview"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#D5D7F3"/>



        <RelativeLayout
            android:id="@+id/rel_searchview"
            android:layout_marginRight="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="50dp"
            android:background="#FFF"
            android:layout_width="250dp"
            android:layout_height="25dp">


            <ImageView
                android:id="@+id/imgSearch"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />



            <EditText
                android:hint="Search book"
                android:id="@+id/edtSearch"
                android:singleLine="true"
                android:textColor="#000"
                android:background="@drawable/edt_style"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imgSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>




        <android.support.design.widget.BottomNavigationView
            app:itemIconTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            app:itemTextColor="@color/cardview_dark_background"
            app:menu="@menu/nav_button"
            android:id="@+id/bottom_navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.BottomNavigationView>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header_nav"
        app:itemIconTint="#FF5722"
        android:id="@+id/nav_main"
        android:layout_gravity="start"
        app:menu="@menu/option"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
