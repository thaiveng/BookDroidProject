<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="3"
    android:padding="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/sub_linear1_in_listViewFollower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_follower"
            app:civ_border_width="2dp"
            app:civ_border_color="#D5D7F3"
            android:src="@drawable/ic_user_profile_24dp"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/sub_linear2_in_listViewFollower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_username_follower"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:id="@+id/sub_linear3_in_listViewFollower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_user_follower"
            android:background="@drawable/button_radius_user_following"
            android:text="Follower"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="30dp"  />


    </LinearLayout>


</LinearLayout>