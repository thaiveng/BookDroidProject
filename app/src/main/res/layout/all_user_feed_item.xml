<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/linearlayout_border"
    app:layout_goneMarginTop="20dp"

    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <LinearLayout
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/img_all_user_feed"
            android:src="@drawable/user_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />


        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_username_all_feed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_follower_all_feed"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="Followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_recommendation_all_feed"
                android:textSize="15sp"
                android:textAlignment="center"
                android:text="Recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <Button
            android:background="#0099FF	"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/btn_follow_all_feed"
            android:textStyle="bold"
            android:text="Follow"
            android:layout_width="70dp"
            android:layout_height="40dp" />

    </LinearLayout>


</LinearLayout>